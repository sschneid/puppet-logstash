input {
  file {
    type => "syslog"
    path => [ <%= params['logfiles'] %> ]
    sincedb => "/etc/logstash/.sincedb"
  }

  # polaris apache error logs (with rolling datestamp filename via cronolog)
  file {
    type => "apache-error"
    path => [ "/prod/apache/logs/*error_log" ]
  }

  # listen on 3333/tcp for logs being played in
  tcp {
    type => "apache-error"
    port => 3333
    host => "127.0.0.1"
  }
  
  

}
